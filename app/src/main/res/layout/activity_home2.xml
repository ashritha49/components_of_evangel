<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/home2_bg"
    tools:context=".HomeActivity2">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/search_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="4"
                android:background="@color/light_edittext"
                android:backgroundTint="#523C6B"
                android:drawableEnd="@drawable/ic_search"
                android:drawableTint="@color/white"
                android:hint="Search"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img1"
        android:layout_width="135dp"
        android:layout_height="192dp"
        android:layout_marginRight="300dp"
        android:src="@drawable/sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintVertical_bias="0.563" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="135dp"
        android:layout_height="192dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintVertical_bias="0.563" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="371dp"
        android:layout_height="522dp"
        android:src="@drawable/bg_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintVertical_bias="0.362" />

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/transparent_card_bg"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l1">

        <ImageView
            android:id="@+id/ic_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/card_bg_light"
            android:backgroundTint="@color/text_dark"
            android:padding="10dp"
            android:src="@drawable/ic_history"
            app:tint="@color/edittext_colorlight" />

        <TextView
            style="@style/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/ic_history"
            android:text="History"
            android:textColor="@color/edittext_colorlight" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/ic_history"
            android:layout_margin="10dp"
            android:background="#522d6b" />

        <ImageView
            android:id="@+id/ic_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/card_bg_light"
            android:backgroundTint="@color/text_dark"
            android:padding="10dp"
            android:src="@drawable/ic_downloads"
            app:tint="@color/edittext_colorlight" />

        <TextView
            style="@style/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/ic_history"
            android:text="Downloads"
            android:textColor="@color/white" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/ic_history"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/text_dark" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_img_2"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintVertical_bias="0.555" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        app:layout_constraintLeft_toLeftOf="@id/bottomNav"
        app:layout_constraintTop_toTopOf="@id/bottomNav"
        app:layout_constraintRight_toRightOf="@id/bottomNav"
        app:layout_constraintBottom_toBottomOf="@id/bottomNav">

        <View
            android:id="@+id/circular1"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"
            android:layout_marginLeft="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/white_circle_l" />
        <View
            android:id="@+id/circular2"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/white_circle" />

        <View
            android:id="@+id/circular3"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="0dp"
            android:background="@drawable/white_circle" />

        <View
            android:id="@+id/circular4"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:visibility="invisible"
            android:background="@drawable/white_circle_r" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="310dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/tabbar_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingHorizontal="20dp"
        app:menu="@menu/bottom_navbar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:foregroundGravity="center_vertical"
        app:itemIconSize="20dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@color/tabbar_sselector"
        app:itemTextColor="@color/tabbar_sselector">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>