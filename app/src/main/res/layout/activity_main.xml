<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROWS"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="@style/dynamictype"/>

            <Button
                android:id="@+id/get_started"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textStyle="bold"
                android:elevation="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                style="@style/ButtonDarkStyle"/>

            <Button
                android:id="@+id/get_started2"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textStyle="bold"
                android:elevation="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                style="@style/ButtonLightStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="100dp"
                android:background="@drawable/dialogbox_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUTTONS"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/dynamictype"/>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/dotted_stroke_background"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        style="@style/LightImageButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="10dp"
                        android:padding="0dp"
                        android:elevation="15dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/icon_color_dark"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <ImageButton
                        style="@style/DarkImageButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:elevation="15dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/icon_color_light"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:background="@drawable/dotted_stroke_background"
                    android:orientation="horizontal">

                    <ImageButton
                        style="@style/CircleLightImageButtonStyle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:elevation="15dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/icon_color_dark"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <ImageButton
                        style="@style/CircleDarkImageButtonStyle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="10dp"
                        android:elevation="15dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/icon_color_light"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/dotted_stroke_background">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="58dp"
                        android:text="Favorite"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="20dp"
                        android:drawableTint="@color/icon_color_light"
                        android:elevation="6dp"
                        android:drawableStart="@drawable/ic_star"
                        android:layout_gravity="center_horizontal"
                        style="@style/DarkImageButtonStyle"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:padding="6dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_bg_light"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail"
                    android:background="@drawable/light_imagebutton"
                    android:padding="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/light_edittext"
                    android:hint="Email Address"
                    android:padding="0dp"
                    android:textColor="@color/edittext_colordark"
                    android:textColorHint="@color/edittext_colordark"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_bg_dark"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail"
                    app:tint="@color/edittext_colorlight"
                    android:background="@drawable/dark_imagebutton"
                    android:padding="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/dark_edittext"
                    android:hint="Email Address"
                    android:padding="0dp"
                    android:textColor="@color/edittext_colorlight"
                    android:textColorHint="@color/edittext_colorlight"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:padding="6dp"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_bg_light"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4"
                    android:background="@color/light_edittext"
                    android:hint="Search"
                    android:padding="0dp"
                    android:textColor="@color/edittext_colordark"
                    android:textColorHint="@color/edittext_colordark"
                    tools:ignore="TouchTargetSizeCheck" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    app:tint="@color/edittext_colordark"
                    android:background="@drawable/light_imagebutton"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:padding="6dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_bg_dark"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4"
                    android:background="@color/dark_edittext"
                    android:hint="Search"
                    android:padding="0dp"
                    android:textColor="@color/edittext_colorlight"
                    android:textColorHint="@color/edittext_colorlight"
                    tools:ignore="TouchTargetSizeCheck" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    app:tint="@color/edittext_colorlight"
                    android:background="@drawable/dark_imagebutton"
                    android:padding="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/dark_dialogbox_bg"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/dynamictype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="DYNAMIC TYPE" />

                <TextView
                    style="@style/Largetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Large Title - 34"
                    android:textStyle="bold" />

                <TextView
                    style="@style/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Title 1 - 28"
                    android:textStyle="bold" />

                <TextView
                    style="@style/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Title 2 - 22"
                    android:textStyle="bold" />

                <TextView
                    style="@style/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Title 3 - 20"
                    android:textStyle="bold" />

                <TextView
                    style="@style/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Headline - 17"
                    android:textStyle="bold" />

                <TextView
                    style="@style/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Body - 17" />

                <TextView
                    style="@style/callout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Callout - 16" />

                <TextView
                    style="@style/subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Subhead - 15" />

                <TextView
                    style="@style/footnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Footnote - 13" />

                <TextView
                    style="@style/caption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Caption 1 - 12" />

                <TextView
                    style="@style/caption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Caption 2 - 11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/light_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARDS"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/dynamictype"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_light"
                    android:padding="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/ic_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/card_bg_light"
                        android:padding="10dp"
                        android:src="@drawable/ic_history" />

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_history"
                        android:textColor="@color/text_dark"
                        android:text="History" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/ic_history"
                        android:background="@color/text_dark"/>

                    <ImageView
                        android:id="@+id/ic_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:background="@drawable/card_bg_light"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/v1"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_favorite"
                        android:layout_below="@id/v1"
                        android:textColor="@color/text_dark"
                        android:text="Favorites" />

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/ic_favorite"
                        android:background="@color/text_dark"/>

                    <ImageView
                        android:id="@+id/ic_downloads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_downloads"
                        android:background="@drawable/card_bg_light"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/v2"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_favorite"
                        android:layout_below="@id/v2"
                        android:textColor="@color/text_dark"
                        android:text="Downloads" />

                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/ic_favorite"
                        android:background="@color/text_dark"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_light"
                    android:padding="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="70dp">

                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:background="@color/cardlight_bg"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_share"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/text_dark"
                        android:text="Share" />
                    <View
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/ic_share"
                        android:background="@color/text_dark"/>

                    <ImageView
                        android:id="@+id/ic_downloads2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_downloads"
                        android:background="@color/cardlight_bg"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/v4"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_share"
                        android:layout_below="@+id/v4"
                        android:textColor="@color/text_dark"
                        android:text="Downloads" />
                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/ic_share"
                        android:background="@color/text_dark"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_dark"
                    android:padding="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="70dp">

                    <ImageView
                        android:id="@+id/ic_share2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:background="@color/carddark_bg"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_share2"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/text_purple"
                        android:text="Share" />
                    <View
                        android:id="@+id/v6"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/ic_share2"
                        android:background="@color/text_dark"/>

                    <ImageView
                        android:id="@+id/ic_downloads3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_downloads"
                        android:background="@color/carddark_bg"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/v6"/>

                    <TextView
                        style="@style/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ic_share2"
                        android:layout_below="@+id/v6"
                        android:textColor="@color/text_purple"
                        android:text="Downloads" />
                    <View
                        android:id="@+id/v7"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/ic_share2"
                        android:background="@color/text_dark"/>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cirlcle_bg1"/>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/circle_bg2"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>