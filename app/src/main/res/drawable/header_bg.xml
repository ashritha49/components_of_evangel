<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/icon_shadow_dark"
                android:endColor="@color/card_shadow_light"
                android:angle="-45"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="1dp" android:left="0.5dp" android:right="0.5dp" android:bottom="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/header_bg" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>