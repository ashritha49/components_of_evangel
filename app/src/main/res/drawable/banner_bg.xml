<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="#c54cf1"
                android:endColor="#2f1145"
                android:angle="-45"/>
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="2dp" >
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="#684485"
                android:endColor="#2a1a44"
                android:angle="-90"/>
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>