<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#504382"/>
            <corners android:topLeftRadius="30dp" />
        </shape>
    </item>
    <item android:top="2dp" android:left="0.5dp" android:right="0dp" android:bottom="0dp" >
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#3e2168"
                android:endColor="#24164f"
                android:angle="45"/>
            <corners android:topLeftRadius="30dp" />
        </shape>
    </item>
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/transparent2"
                android:endColor="#24164f"
                android:angle="90"/>
            <corners android:topLeftRadius="30dp" />
        </shape>
    </item>
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/transparent2"
                android:endColor="#24164f"
                android:angle="-90"/>
            <corners android:topLeftRadius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/transparent2"
                android:endColor="#24164f"
                android:angle="-90"/>
            <corners android:topLeftRadius="30dp" />
        </shape>
    </item>
</layer-list>